@{
	Layout = "_Layout";
	ViewData["Title"] = "Statistics";
}

<div class="app" style="display: flex; width: 100%;">
	@await Component.InvokeAsync("Menu")
	<div class="group" style="width: 100%;">
		<div class="card-form" style="display: flex; justify-content: space-between; margin-left: 20px; margin-right: 20px;">
			<div class="form-group" style="flex: 1; margin-right: 20px;">
				<label for="exampleInputEmail1">Mã quân nhân</label>
				<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã quân nhân">
			</div>

			<div class="form-group" style="flex: 1; margin-right: 20px;">
				<label for="exampleInputPassword1">Họ tên</label>
				<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Họ tên">
			</div>

			<div class="form-group" style="flex: 1;">
				<label for="exampleInputPassword1">Cấp bậc</label>
				<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Cấp bậc">
			</div>
		</div>

		<div class="card-form" style="display: flex; justify-content: space-between; margin-left: 20px; margin-right: 20px;">
			<div class="form-group" style="flex: 1; margin-right: 20px;">
				<label for="exampleInputPassword1">Chức vụ</label>
				<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Chức vụ">
			</div>

			<div class="form-group" style="flex: 1; margin-right: 20px;">
				<label for="exampleInputPassword1">Đơn vị</label>
				<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Đơn vị">
			</div>

			<div class="form-group" style="flex: 1;">
				<label for="exampleInputPassword1">Ghi chú</label>
				<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Ghi chú">
			</div>

		</div>
		<button type="button" class="btn btn-block btn-success btn-lg" style="width: 150px; height: 50px; margin: auto;">Thống kê</button>
		@await Component.InvokeAsync("QuanNhan")
	</div>
</div>
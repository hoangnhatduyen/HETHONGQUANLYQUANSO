
@{
	Layout = "_Layout";
	ViewData["Title"] = "Update";
}

<div class="app" style="display: flex;">
	@await Component.InvokeAsync("Menu")
	<div class="wrapper" style="width: 100%;">
		<div class="card card-primary">
			<div class="card-header" style="background-color: #004400;">
				<h3 class="card-title">Cập nhật thông báo</h3>
			</div>
			<!-- /.card-header -->
			<!-- form start -->
			<form>
				<div class="card-body">
					<div class="card-form" style="display: flex; justify-content: space-between;">
						<div class="form-group" style="flex:1; margin-right: 20px;">
							<label for="exampleInputEmail1">Mã thông báo</label>
							<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã thông báo">
						</div>

						<div class="form-group" style="flex: 1; margin-right: 20px;">
							<label for="exampleInputPassword1">Tên thông báo</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên thông báo">
						</div>

						<div class="form-group" style="flex: 1; ">
							<label for="exampleInputPassword1">Nội dung thông báo</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nội dung thông báo">
						</div>
					</div>

					<div class="card-form" style="display: flex; justify-content: space-between;">
						<div class="form-group" style="flex: 1; margin-right: 20px;">
							<label for="exampleInputPassword1">Mã đơn vị</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập mã đơn vị">
						</div>

						<div class="form-group" style="flex: 1; margin-right: 20px; ">
							<label for="exampleInputPassword1">Người viết</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên người viết">
						</div>

						<div class="form-group" style="flex:1;">
							<label for="exampleInputPassword1">Ngày</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập ngày">
						</div>

					</div>

				</div>
				<div class="group-btn" style="display: flex; justify-content: space-between;">
					<button type="button" class="btn btn-block btn-success btn-lg" style="width: 150px; height: 50px; margin-left: 20px; margin-bottom: 0;">Thêm</button>
					<button type="button" class="btn btn-block btn-warning btn-lg" style="width: 150px; height: 50px; margin-bottom: 20px;">Sửa</button>
					<button type="button" class="btn btn-block btn-danger btn-lg" style="width: 150px; height: 50px; margin-right: 20px; margin-bottom: 20px;">Xóa</button>
				</div>

				<!-- /.card-body -->
			</form>
		</div>

		@await Component.InvokeAsync("ThongBao")
	</div>
</div>